
<section id="activity-description-container">
  <div class="">
    {{#if act.image}}
      <img id="img-activity-description" src="{{act.image}}">
    {{/if}}
  </div>

  <div id="activity-container">
    <div id="activity-container-white">
      <h3 id="h3-title-activity">{{act.activity}}</h3>

      <div>
        <p class="p-activity-description">Go with: <a href="/user-profile/{{act.author._id}}">{{act.author.username}}</a></p>
        <p class="p-activity-description">About: </p>
        <p>{{act.description}}</p>
        <p class="p-activity-description">Looking to go with:</p>
        <p>{{act.find}}</p>

        <div id="locations-container">
          <i class="fa fa-map-marker"></i>
          <p id="p-location">{{act.locations}}</p>
        </div>

      </div>
      <div class="from-to-dates">
        <i class="fas fa-calendar"></i>
        <p class="date" id="date-from">From: {{finale}}</p>
        <p class="date">To: {{finale2}}</p>
      </div>

      <a href="mailto:{{act.author.email}} ">Contact Me</a>
    </div>

  </div>






<div class="map" id="map"></div>

{{!-- Create hidden elements to store the display style of the map--}}
<div class="hidden map-center"> {{mapCenter}}  </div>
<div class="hidden map-zoom">  {{mapZoom}}  </div>

{{!-- Create the markers and the popups for every location Paso 6--}}
  
  <div class="hidden pos">  {{location.pos}}  </div>
  <div class="marker">  </div>


</section>

<script src="/js/script.js"></script>