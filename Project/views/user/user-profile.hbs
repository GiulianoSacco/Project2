

<section id="profile-container">
    <div>
        <img class="img-profile" src="{{user.image}}">
    </div>

    <div id="profile-info-container">
        <h3 class="profile-info">{{userProfile.username}}</h3>
        {{#if isItTheSame}} 
        <a class="profile-info" href="mailto:{{userProfile.email}} ">Contact Me</a>
        {{/if}}
    </div>
</section>
{{#if isTheSame}}    
<a href="/user-profile/edit"><p>Edit profile</p></a>
{{/if}}

<h3>Description</h3>
<p>{{userProfile.description}}</p>

<section id="profile-activities">
    <h3>Activities</h3>

        {{#each userProfile.activityIds}}
        <div id="profile-activity-container">
        <h4>{{this.activity}}</h4>
        <p>{{this.description}}</p>
        <p>{{this.find}}</p>
        <p>{{finale}}</p>
        <p>{{finale}}</p>
        <a href="/edit/{{this._id}}">Edit activity</a>
        <form action="/description/{{this._id}}/delete" method="POST">
            <button>Delete</button>
        </form>
        </div>

{{/each}}

</section>


