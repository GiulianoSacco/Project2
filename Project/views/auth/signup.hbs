{{#unless user}}

<nav id="nav-container">

  <a href="/"><img class="logo" src="/images/travelsouls-logo.png" alt="logo img"></a>

  <ul class="nav-links">
    <li class="nav-item"><a id="nav-white" href="/auth/signup">Signup</a></li>
    <li class="nav-item"><a id="nav-blue" href="/auth/login">Login</a></li>
  </ul>
</nav>

{{/unless}}




<div class="signup-container">

  <form class="forms-container" action="/auth/signup" method="POST">

  <h2 class="title">Welcome TravelSouls</h2>
  <p class="title">Let's Get Your Journey Started!</p>

    <div class="input">
      <i class="fa fa-user"></i>

      <input type="text" name="fullName" placeholder="Name" />
    </div>
    <div class="input">
      <i class="fa fa-envelope"></i>
      <input type="email" name="email" placeholder="Email" />
    </div>
    <div class="input">
      <i class="fa fa-user-circle"></i>
      <input type="text" name="username" placeholder="Username" />
    </div>
    <div class="input">
      <i class="fa fa-lock"></i>
      <input type="password" name="password" placeholder="Password" />
    </div>
    <div class="input">
      <i class="fa fa-users"></i>
      <label> Relationship Status
        <select name="status" placeholder="">
          <option value="single">Single</option>
          <option value="in a relationship">In a Relationship</option>
        </select>
      </label>
    </div>
    <div>
      <button class="input-btn" type="submit">Signup</button>
    </div>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

  </form>
</div>


<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>